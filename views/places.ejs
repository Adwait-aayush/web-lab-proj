<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top 10 Places to Visit in Pakistan</title>
    <style>
        body {
            font-family: 'Arial', sans-serif; 
            background-color: #f4f4f4; 
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            font-size: 40px;
            color: #2e8b57; 
            margin: 20px 0;
        }

        .container {
            height: 300px; 
            display: flex;
            flex-direction: row;
            margin: 15px auto; 
            width: 80%; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
            background-color: white; 
            border-radius: 8px; 
        }

        .info {
            width: 60%; 
            padding: 15px; 
            box-sizing: border-box; 
        }

        .img {
            width: 40%; 
            display: flex; 
            justify-content: center; 
            align-items: center; 
        }

        .img img {
            width: 100%; 
            height: 200px; 
            object-fit: cover; 
            border-radius: 8px; 
        }

        .random-place {
            margin: 20px auto;
            width: 80%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
            background-color: white; 
            border-radius: 8px; 
            padding: 15px;
        }
    </style>
</head>

<body>
    <h1>Top 10 Places to Visit in Pakistan</h1>
    
    <% for (let p of places) { %>
        <div class="container">
            <div class="info">
                <h1 id="header"><%= p.name %></h1>
                <p><%= p.description %></p> 
            </div>
            <div class="img">
                <img src="<%= p.imgSrc %>" alt="<%= p.name %> image"> 
            </div>
        </div>
    <% } %>

    <% 
        
        const randomIndex = Math.floor(Math.random() * places.length);
        const randomPlace = places[randomIndex]; 
    %>
    
    <div class="random-place">
        <h1>Random Place to Visit</h1>
        <h2><%= randomPlace.name %></h2>
        <p><%= randomPlace.description %></p>
        <img src="<%= randomPlace.imgSrc %>" alt="<%= randomPlace.name %> image" style="width: 100%; height: auto; border-radius: 8px;">
    </div>
</body>

</html>